<div class="second-section-blur relative w-full min-h-[700px] flex items-center
  {% if section.settings.card_alignment == 'center' %}justify-center
  {% elsif section.settings.card_alignment == 'left' %}justify-start
  {% else %}justify-end
  {% endif %}" style="background-image: url({{ section.settings.hero_image | img_url: 'master' }}); background-size: cover; background-position: center;">

  <div class="last-section absolute right-36 z-10 max-w-3xl w-full md:w-1/2 mx-[50px] px-7 my-12
    {% if section.settings.card_alignment == 'right' %}md:mr-16
    {% elsif section.settings.card_alignment == 'left' %}md:ml-16
    {% else %}mx-auto
    {% endif %}
    rounded px-8 py-12 flex flex-col
    {% if section.settings.show_content_bg %} bg-white bg-opacity-95 shadow-lg{% endif %}" style="border-left: 4px solid #7a8572;">
    <h1 class="text-4xl md:text-5xl font-bold mb-4">
      {{ section.settings.heading | escape }}
    </h1>
    <div class="mb-8 text-gray-700 leading-relaxed text-lg">
      {{ section.settings.description }}
    </div>
    {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
      <a href="{{ section.settings.cta_link }}" class="inline-block bg-[#7a8572] text-white px-8 py-3 rounded font-semibold tracking-wide hover:bg-[#617052] transition w-max">
        {{ section.settings.cta_label | escape }}
      </a>
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Contact Us Hero Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image"
      },
      {
        "type": "select",
        "id": "card_alignment",
        "label": "Contact Card Alignment",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "right"
      },
      {
        "type": "checkbox",
        "id": "show_content_bg",
        "label": "Enable Content Background Color",
        "default": true
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "CONTACT US, TODAY!"
      }, {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>With a convenient location in San Francisco, Blake Charles Salon is the place to go for anyone who wants to feel and look their absolute best! Visit our hair and nail salon on Maiden Lane to be treated to the best salon experience San Francisco has to offer! Simply book your appointment online or contact us at our salon on Maiden Lane at <strong>415-433-3030</strong>. We look forward to seeing you soon and treating you to a one-of-a-kind salon experience!</p>"
      }, {
        "type": "text",
        "id": "cta_label",
        "label": "Button Text"
      }, {
        "type": "url",
        "id": "cta_link",
        "label": "Button Link"
      }
    ],
    "presets": [
      {
        "name": "Contact Us Hero Banner"
      }
    ]
  }
{% endschema %}