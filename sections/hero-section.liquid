<div class="relative min-h-screen flex flex-col md:flex-row items-stretch bg-gray-50">
  <!-- Left: Image Section -->
  <div class="md:w-1/2 w-full flex">
    {% if section.settings.hero_image != blank %}
      <img
        height=""
        width=""
        src="{{ section.settings.hero_image | img_url: 'master' }}"
        alt="Salon Experience"
        class="object-cover w-full h-full max-h-[600px]" />
    {% else %}
      <div class="bg-gray-200 w-full h-full flex items-center justify-center">
        <span class="text-gray-400">No Image Selected</span>
      </div>
    {% endif %}
  </div>
  <!-- Right: Contact Info Overlay -->
  <div class="absolute md:static z-10 md:w-1/2 w-full flex items-center justify-center md:bg-none bg-white bg-opacity-70 md:bg-opacity-90 top-0 right-0 h-full">
    <div class="max-w-xl w-full p-8 md:p-12 bg-white bg-opacity-90 rounded shadow-lg m-2 md:m-10">
      <h1 class="text-3xl md:text-5xl font-bold mb-6">
        {{ section.settings.heading | escape }}
      </h1>
      <div class="mb-8 text-gray-700 leading-relaxed text-lg">
        {{ section.settings.description }}
      </div>
      {% if section.settings.cta_label != blank and section.settings.cta_link != blank %}
        <a href="{{ section.settings.cta_link }}" class="inline-block bg-[#7a8572] text-white px-8 py-3 rounded font-semibold tracking-wide hover:bg-[#617052] transition">
          {{ section.settings.cta_label | escape }}
        </a>
      {% endif %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Contact Us Hero Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "hero_image",
        "label": "Hero Image",
        "default": "shopify://shop_images/content-4.jpg"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "CONTACT US, TODAY!"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "Description",
        "default": "<p>With a convenient location in San Francisco, Blake Charles Salon is the place to go for anyone who wants to feel and look their absolute best! Visit our hair and nail salon on Maiden Lane to be treated to the best salon experience San Francisco has to offer! Simply book your appointment online or contact us at our salon on Maiden Lane at <strong>415-433-3030</strong>. We look forward to seeing you soon and treating you to a one-of-a-kind salon experience!</p>"
      },
      {
        "type": "text",
        "id": "cta_label",
        "label": "Button Text",
        "default": "CONTACT US DIRECTLY"
      }, {
        "type": "url",
        "id": "cta_link",
        "label": "Button Link",
        "default": "tel:415-433-3030"
      }
    ],
    "presets": [
      {
        "name": "Contact Us Hero Banner"
      }
    ]
  }
{% endschema %}