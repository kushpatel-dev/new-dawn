<div class="w-full bg-[#f7f6f3] text-[#232220] py-9 px-2 font-sans">
  <div class="max-w-8xl mx-auto">

    <!-- Featured In Bar -->
    <div class="mb-8 text-center">
      <div class="uppercase tracking-wider font-bold mb-3 text-3xl">
        {{ section.settings.featured_in_text }}
      </div>
      <div class="flex flex-wrap justify-center gap-x-7 gap-y-6">
        {% for block in section.blocks %}
          {% if block.type == 'featured_logo' and block.settings.logo_img != blank %}
            <img
              height=""
              width=""
              src="{{ block.settings.logo_img | img_url: '80x' }}"
              alt="Featured Logo"
              class="h-8 w-auto object-contain" />
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <!-- Two Column Layout -->
    <div class="flex flex-col md:flex-row gap-9">

      <!-- LEFT: Instagram -->
      <div class="md:w-1/3 flex flex-col items-start mb-6 md:mb-0">
        <div class="text-[1.1em] font-semibold mb-2">
          FOLLOW US ON INSTAGRAM
          <div class="block font-medium text-base">{{ section.settings.instagram_handle }}</div>
        </div>
        {% comment %} add {% endcomment %}
        <div class="flex-1 flex flex-col items-start">
          <div class="font-bold text-base mb-2">{{ section.settings.experience_column1 }}</div>
          {% if section.settings.square_image %}
            <img
              height=""
              width=""
              src="{{ section.settings.square_image | img_url: '90x90' }}"
              alt="Experience Image"
              class="w-[90px] h-[90px] rounded-md object-cover mt-2" />
          {% endif %}
        </div>

      </div>

      <!-- RIGHT: Experience, Links, Logos -->
      <div class="md:w-2/3 flex flex-col gap-6">
        <div class="flex flex-col lg:flex-col gap-6">

          <!-- COLUMN 1: Experience Text and Image -->

          <div class="flex-1 flex flex-col">
            <h2 class="text-lg font-semibold mb-2">Haus of bloom Experience</h2>
            <ul class="space-y-1">
              {% for block in section.blocks %}
                {% if block.type == 'learn_link' and block.settings.link_label != blank and block.settings.link_url != blank %}
                  <li>
                    <a href="{{ block.settings.link_url }}" class="hover:text-[#1e5e7f]">
                      {{ block.settings.link_label }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
          <!-- COLUMN 2: Learn More Links -->
          <div class="flex-1 flex flex-col max-w-[100px]">
            <h2 class="text-lg font-semibold mb-2">Learn More</h2>
            <ul class="space-y-1">
              {% for block in section.blocks %}
                {% if block.type == 'learn_link' and block.settings.link_label != blank and block.settings.link_url != blank %}
                  <li>
                    <a href="{{ block.settings.link_url }}" class="hover:text-[#1e5e7f]">
                      {{ block.settings.link_label }}
                    </a>
                  </li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>

          <!-- COLUMN 3: Footer Logos and Main Logo -->
          <div class="flex-1 flex flex-col items-center justify-between">
            <div class="flex gap-3 mb-3">
              {% for block in section.blocks %}
                {% if block.type == 'footer_logo' and block.settings.footer_logo_img != blank %}
                  <img
                    height=""
                    width=""
                    src="{{ block.settings.footer_logo_img | img_url: '50*50' }}"
                    alt="Footer Logo"
                    class="w-[80px] h-[80px] object-contain" />
                {% endif %}
              {% endfor %}
            </div>

            {% comment %} add {% endcomment %}
            <div class="flex gap-3 mt-3">
              {% for block in section.blocks %}
                {% if block.type == 'instagram_image' and block.settings.insta_img != blank %}
                  <img
                    height=""
                    width=""
                    src="{{ block.settings.insta_img | img_url: '60x60' }}"
                    alt="Instagram image"
                    class="w-15 h-15 rounded-lg object-cover" />
                {% endif %}
              {% endfor %}
            </div>
            <div class="mt-3">
              {% if section.settings.main_logo %}
                <img
                  height=""
                  width=""
                  src="{{ section.settings.main_logo | img_url: '120x' }}"
                  alt="Site Logo"
                  class="w-20 h-auto" />
              {% endif %}
            </div>
          </div>
        </div>

        <!-- Copyright -->
        <div class="text-right text-sm text-[#969390] pt-4 mt-4 border-t border-[#e9e7e6]">
          {{ section.settings.copyright }}
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Custom Footer",
    "settings": [
      {
        "type": "text",
        "id": "featured_in_text",
        "label": "Featured In Heading",
        "default": "FEATURED IN"
      },
      {
        "type": "text",
        "id": "instagram_handle",
        "label": "Instagram Handle",
        "default": "@yourInstagram"
      },
      {
        "type": "text",
        "id": "experience_column1",
        "label": "Column 1 Bold Text",
        "default": "YOUR EXPERIENCE TITLE"
      },
      {
        "type": "image_picker",
        "id": "square_image",
        "label": "Column 1 Square Image"
      }, {
        "type": "image_picker",
        "id": "main_logo",
        "label": "Main Brand Logo"
      }, {
        "type": "text",
        "id": "copyright",
        "label": "Copyright Text",
        "default": "Â©2025 Your Brand Name"
      }
    ],
    "blocks": [
      {
        "type": "featured_logo",
        "name": "Featured Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "logo_img",
            "label": "Logo Image"
          }
        ],
        "limit": 10
      }, {
        "type": "instagram_image",
        "name": "Instagram Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "insta_img",
            "label": "Instagram Image"
          }
        ],
        "limit": 8
      }, {
        "type": "footer_logo",
        "name": "Footer Logo",
        "settings": [
          {
            "type": "image_picker",
            "id": "footer_logo_img",
            "label": "Footer Logo Image"
          }
        ],
        "limit": 10
      }, {
        "type": "learn_link",
        "name": "Learn More Link",
        "settings": [
          {
            "type": "text",
            "id": "link_label",
            "label": "Link Label"
          }, {
            "type": "url",
            "id": "link_url",
            "label": "Link URL"
          }
        ],
        "limit": 10
      }
    ],
    "presets": [
      {
        "name": "Custom Footer"
      }
    ]
  }
{% endschema %}