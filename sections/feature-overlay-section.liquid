<section class="relative w-full min-h-screen flex items-center justify-center bg-[#f7f7f2] py-10">

  <div class="block absolute inset-0 w-full h-full z-10" style="background: linear-gradient(90deg, rgba(247,247,242,0) 0%, rgba(247,247,242,0.67) 35%, rgba(247,247,242,0.8) 55%, #F7F7F2 100%); z-index: 10;"></div>

  {% if section.settings.background_image != blank %}
    <img
      height=""
      width=""
      src="{{ section.settings.background_image | img_url: '2048x2048' }}"
      alt="{{ section.settings.background_image_alt | escape }}"
      class="absolute inset-0 w-full h-full object-cover z-0" />
  {% endif %}

  <!-- Cards Container -->
  <div class="relative z-10 flex flex-col md:flex-row gap-8 w-full max-w-7xl mt-[100px] md:mt-[200px] px-4 md:px-10">

    <!-- Bespoke Styling Card -->
    <div class="flex-1 px-8 flex flex-col justify-end min-h-[140px] md:min-h-[340px]">
      <h2 class="text-3xl font-bold md:text-4xl md:font-extrabold mb-2 tracking-tight lg:text-6xl text-gray-800 uppercase">
        {{ section.settings.bespoke_heading_top }}<br>
        <span class="text-lg font-light">{{ section.settings.bespoke_heading_sub }}</span>
      </h2>
      <p class="mb-6 text-gray-600 text-base md:text-lg">
        {{ section.settings.bespoke_description }}
      </p>
      <a href="{{ section.settings.bespoke_link }}" class="inline-block w-max bg-transparent border border-gray-800 px-5 py-2 font-semibold text-gray-900 rounded hover:bg-gray-100 transition text-sm md:text-base">
        {{ section.settings.bespoke_link_label }}
      </a>
    </div>

    <!-- Signature Color Card -->
    <div class="flex-1 px-8 flex flex-col justify-end min-h-[140px] md:min-h-[340px]">
      <h2 class="text-2xl md:text-3xl font-bold mb-4 tracking-tight text-gray-800 uppercase">
        {{ section.settings.signature_heading_top }}<br>
        <span class="text-lg font-light">{{ section.settings.signature_heading_sub }}</span>
      </h2>
      <p class="mb-4 text-gray-600 text-base md:text-lg">
        {{ section.settings.signature_description }}
      </p>
      <a href="{{ section.settings.signature_link }}" class="inline-block w-max bg-transparent border border-gray-800 px-5 py-2 font-semibold text-gray-900 rounded hover:bg-gray-100 transition text-sm md:text-base">
        {{ section.settings.signature_link_label }}
      </a>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Bespoke Services",
    "tag": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background Image"

      },
      {
        "type": "text",
        "id": "background_image_alt",
        "label": "Background Image Alt Text",
        "default": "Service Background"
      },

      {
        "type": "text",
        "id": "bespoke_heading_top",
        "label": "Bespoke Styling Heading Top",
        "default": "Bespoke Styling"
      },
      {
        "type": "text",
        "id": "bespoke_heading_sub",
        "label": "Bespoke Styling Heading Subtext",
        "default": "Services"
      }, {
        "type": "textarea",
        "id": "bespoke_description",
        "label": "Bespoke Styling Description",
        "default": "From modern cuts to classic looksâ€”tailored for you with precision and artistry."
      }, {
        "type": "text",
        "id": "bespoke_link_label",
        "label": "Bespoke Styling Link Label",
        "default": "LEARN MORE"
      }, {
        "type": "url",
        "id": "bespoke_link",
        "label": "Bespoke Styling Link URL"

      }, {
        "type": "text",
        "id": "signature_heading_top",
        "label": "Signature Color Heading Top",
        "default": "Signature Color"
      }, {
        "type": "text",
        "id": "signature_heading_sub",
        "label": "Signature Color Heading Subtext",
        "default": "Services"
      }, {
        "type": "textarea",
        "id": "signature_description",
        "label": "Signature Color Description",
        "default": "Dimensional balayage, lived-in blondes, and vibrant tones created with care."
      }, {
        "type": "text",
        "id": "signature_link_label",
        "label": "Signature Color Link Label",
        "default": "LEARN MORE"
      }, {
        "type": "url",
        "id": "signature_link",
        "label": "Signature Color Link URL"

      }
    ],
    "presets": [
      {
        "name": "Bespoke Services"
      }
    ]
  }
{% endschema %}